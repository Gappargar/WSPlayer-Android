<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_main_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".ui.tv.TvMainActivity">

    <LinearLayout
        android:id="@+id/nav_rail_menu"
        android:layout_width="wrap_content"
        android:minWidth="72dp" android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@color/tv_nav_rail_background" android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/nav_search_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_tv_nav_search" android:background="?android:attr/selectableItemBackground" android:contentDescription="@string/search_title_tv"
            android:scaleType="centerInside"
            android:layout_marginBottom="24dp"
            android:nextFocusRight="@+id/tv_main_fragment_container" android:nextFocusDown="@+id/nav_settings_button"/>

        <ImageButton
            android:id="@+id/nav_settings_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_tv_nav_settings" android:background="?android:attr/selectableItemBackground" android:contentDescription="@string/settings_title"
            android:scaleType="centerInside"
            android:nextFocusRight="@+id/tv_main_fragment_container" android:nextFocusUp="@+id/nav_search_button"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/tv_main_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/detailsPanel" app:layout_constraintStart_toEndOf="@id/nav_rail_menu"
        app:layout_constraintEnd_toEndOf="parent"
        android:nextFocusLeft="@id/nav_search_button"/> <LinearLayout
    android:id="@+id/detailsPanel"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#CC000000" android:visibility="gone" app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/nav_rail_menu" app:layout_constraintEnd_toEndOf="parent"
    tools:visibility="visible"> <TextView
    android:id="@+id/tvDetailTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="@android:color/white"
    android:maxLines="2"
    android:ellipsize="end"
    tools:text="Název vybraného souboru" />

    <TextView
        android:id="@+id/tvDetailType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp"
        tools:text="Typ: MKV" />

    <TextView
        android:id="@+id/tvDetailSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/darker_gray"
        tools:text="Velikost: 1.5 GB" />

    <TextView
        android:id="@+id/tvDetailVotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/tertiary_text_light"
        android:layout_marginTop="4dp"
        tools:text="Hlasy: +10 / -2" />

    <TextView
        android:id="@+id/tvDetailInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/tertiary_text_light" android:layout_marginTop="4dp"
        tools:text="Kvalita: 1080p, Jazyk: CZ+EN, Datum: 01.01.2025" />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
