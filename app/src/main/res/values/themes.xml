<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.WSPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.WSPlayer.Leanback" parent="Theme.Leanback">
        <item name="colorPrimary">@color/tv_brand_primary</item>
        <item name="defaultBrandColor">@color/tv_brand_primary</item>
        <item name="defaultBrandColorDark">@color/tv_brand_primary_dark</item>
        <item name="colorAccent">@color/tv_accent</item>
        <item name="android:windowBackground">@color/tv_background_color</item>
        <item name="android:colorBackground">@color/tv_background_color</item>


    </style>

    <style name="CustomBrowseRowsTitleStyle" parent="Widget.Leanback.Row.Header">
        <item name="android:textAppearance">@style/TextAppearance.Leanback.Row.Header</item>
        <item name="android:textColor">@color/lb_tv_white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.WSPlayer.Dialog.Transparent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="Theme.WSPlayer.CustomTvSearch" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/tv_background_color</item>
        <item name="android:colorBackground">@color/tv_background_color</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/lb_tv_white</item> <item name="android:textColorHint">#A0A0A0</item> <item name="colorAccent">@color/tv_accent</item>
        <item name="colorPrimary">@color/tv_brand_primary</item> </style>

</resources>
